{
  "name": "social-todo",
  "version": "1.0.0",
  "description": "This project is a social \"to-do\" website designed for a proficiency test. It allows users to add tasks to their personal page and view tasks added by other users. Additionally, users can edit or delete their own tasks.",
  "main": "/dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/app.js",
    "start:dev": "nodemon --exec ts-node src/app.ts",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate"
  },
  "keywords": [],
