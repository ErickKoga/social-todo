    "@fastify/jwt": "^6.7.1",
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "fastify": "^4.14.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^18.15.3",
    "nodemon": "^2.0.21",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
